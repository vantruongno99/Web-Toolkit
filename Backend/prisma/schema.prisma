

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Technology {
  id           Int      @id @default(autoincrement())
  technology String @unique
  description String
  Application Application[]
}

model Application {
    id           Int      @id @default(autoincrement())
    potentialApplications String @unique
    explanation String
    maturity String
    stageOfParticipation String
    purposeOfEngagement String
    levelOfEngagement String
    scale String
    budget String
    solutionFor String
    considerations String
    technology String
    Technology  Technology   @relation(fields: [technology], references: [technology])
      Vendor ApplicationVendor[]

}

model Vendor {
    id           Int      @id @default(autoincrement())
  name String @unique
  ABN Int @unique
  Application ApplicationVendor[]
}

model ApplicationVendor{
  Vendor Vendor @relation(fields: [vendorId], references: [id])
  vendorId Int 
  Application Application @relation(fields: [applicationId], references: [id])
  applicationId Int
   @@id([vendorId, applicationId])
}
